    <title>mReport - Admin Dashboard</title>

    <!-- Bootstrap core CSS -->
    <link href="/assets/bootstrap.css" rel="stylesheet">
    <link href="/assets/style.css" rel="stylesheet">

    <!-- Just for debugging purposes. Don't actually copy this line! -->
    <!--[if lt IE 9]><script src="../../docs-assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header col-md-12">
          <a class="navbar-brand" href="#">mReport</a>
          <% if !admin_signed_in? %>
            <%= link_to "Sign in", admin_session_path, :class => "navbar-brand pull-right" %>
          <% else %>
            <%= link_to "Sign out", destroy_admin_session_path, :method => :delete , :class => "navbar-brand pull-right"%>
          <% end %>
        </div>
      </div>
    </div>


    <div class="dashboard-wrapper container">
      <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
    <% end %>
      <div class="row">
        <h4>Open Issues</h4>
        <table class="table table-striped">
          <tr>
            <th class="col-md-5">
              Issue
            </th>
            <th class="col-md-2">
              Department
            </th>
            <th class="col-md-2">
              Date
            </th>
            <th class="col-md-3 row">
              Actions
            </th>
          </tr>
          <% @tickets.each do |ticket| %>
          <tr>
            <td class="col-md-5">
              <%= ticket.description %>
            </td>
            <td class="col-md-2">
              <%= ticket.category %>
            </td>
            <td class="col-md-2">
              <%= ticket.created_at.strftime("%d %b, %Y %I:%M %p") %>
            </td>
            <td class="col-md-3 row">
              <%= link_to 'Show', ticket, :class => "btn btn-primary" %>
              <% if admin_signed_in? %>
                <%= link_to resolve_ticket_path(ticket), :class => "btn btn-success", :method => :post do %>
                   <span class="glyphicon glyphicon-ok"></span> 
                   Mark as Resolved
                <% end %>
              <% end %>
            </td>
          </tr>
          <% end %>
          <% if @tickets.empty? %>
           <div class="blank-template">
              Hooray! No open issues.
          </div>
          <% end %>
        </table>
        <h4>Resolved Issues</h4>
        <table class="table table-striped">
          <tr>
            <th class="col-md-5">
              Issue
            </th>
            <th class="col-md-2">
              Department
            </th>
            <th class="col-md-2">
              Date
            </th>
          </tr>
          <% @resolved_tickets.each do |ticket| %>
          <tr>
            <td class="col-md-5">
              <%= ticket.description %>
            </td>
            <td class="col-md-2">
              <%= ticket.category %>
            </td>
            <td class="col-md-2">
              <%= ticket.created_at.strftime("%d %b, %Y %I:%M %p") %>
            </td>
          </tr>
          <% end %>
        </table>
 <!--         <%= form_tag import_tickets_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
  <% end %>  -->
       
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/assets/jquery-1.10.2.min.js"></script>
    <script src="/assets/bootstrap.min.js"></script>
  </body>
</html>
